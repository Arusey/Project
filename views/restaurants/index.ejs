<!-- this contains the markup for the welcome/index page  -->
<% include ../partials/header %> 

     <header class="jumbotron">
         <div class="container">
             <h1><span class="glyphicon glyphicon-grain"></span> Welcome To Restaurant Guide!</h1>
             <p>Indulge yourself and suggest some of the best Restaurants in Kenya!</p>
             <p>
                <a class="btn btn-primary btn-lg" href="/restaurants/new">Add New Restaurant</a>
             </p>
              <p>
              <form action="/restaurants" method="GET" class="form-inline" id="restaurant-search">
                <div class="form-group">
                  <input type="text" name="search" placeholder="Restaurants search..." class="form-control">
                </div>
              </form>
             </p>
         </div>
     </header>
     
     <div class="row text-center flex-wrap" id="restaurant-grid">
        <% restaurants.forEach(function(restaurant){ %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                   <img src="<%= restaurant.image %>">
                   <div class="caption">
                       <h4><%= restaurant.name %></h4>
                   </div>
                   <p>
                       <a href="/restaurants/<%= restaurant._id %>" class="btn btn-primary">More Info</a>
                   </p>
                </div>
            </div>
        <% }); %>
    </div>

<% include ../partials/footer %>