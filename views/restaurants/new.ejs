<!-- contains the markup where the user is able to add a new Restaurant -->
<% include ../partials/header %>
    <div class="row">
        <h1 style="text-align: center">Add a New Restaurant You like!</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/restaurants" method="POST">
                <div class="form-group">
                    <label for="name">Name</label>
                    <input class="form-control" type="text" name="name" id="name" placeholder="Enter Restaurant" required>
                </div>
                <div class="form-group">
                    <label for="image">Image Url</label>
                    <input class="form-control" type="text" name="image" id="image" placeholder="Image URL" required>
                </div>
                <div class="form-group">
                    <label for="cost">Cost</label>
                    <input class="form-control" type="number" name="cost" id="cost" placeholder="KSh." step="0.01" min="0" required>
                </div>
                <div class="form-group">
                    <label for="location">Location</label>
                    <input class="form-control" type="text" name="location" id="location" placeholder="Enter Restaurant Location" required>
                </div>
                <div class="form-group">
                    <label for="description">Description</label>
                    <input class="form-control" type="text" name="description" id="description" placeholder="Describe your experience!" required>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/restaurants">Go Back</a>
        </div>
    </div>
<% include ../partials/footer %>
